<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.VueloController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de vuelos" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <Label text="Código" />
                <TextField fx:id="codigoField" promptText="Código del vuelo" GridPane.columnIndex="1" />

                <Label text="Destino" GridPane.rowIndex="1" />
                <TextField fx:id="destinoField" promptText="Destino" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Fecha salida" GridPane.rowIndex="2" />
                <TextField fx:id="fechaSalidaField" promptText="AAAA-MM-DD HH:MM" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por código, destino o fecha" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="vueloTable">
            <columns>
                <TableColumn fx:id="codigoColumn" text="Código" prefWidth="140" />
                <TableColumn fx:id="destinoColumn" text="Destino" prefWidth="200" />
                <TableColumn fx:id="fechaColumn" text="Fecha de salida" prefWidth="180" />
                <TableColumn fx:id="naveColumn" text="Nave" prefWidth="160" />
                <TableColumn fx:id="tripulacionColumn" text="Tripulación" prefWidth="180" />
            </columns>
        </TableView>
    </center>
</BorderPane>
