<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.PersonaController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de personas" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="100" />
                </columnConstraints>
                <Label text="Nombre" />
                <TextField fx:id="nombreField" promptText="Nombre completo" GridPane.columnIndex="1" />

                <Label text="CURP" GridPane.rowIndex="1" />
                <TextField fx:id="curpField" promptText="CURP" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Edad" GridPane.rowIndex="2" />
                <TextField fx:id="edadField" promptText="Edad" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Celular" GridPane.rowIndex="3" />
                <TextField fx:id="celularField" promptText="Número de celular" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Horas de vuelo" GridPane.rowIndex="4" />
                <TextField fx:id="hrsVueloField" promptText="Horas de vuelo" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Licencia" GridPane.rowIndex="5" />
                <TextField fx:id="licenciaField" promptText="Número de licencia" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por nombre, CURP, celular o licencia"
                           HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="personaTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60" />
                <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="180" />
                <TableColumn fx:id="curpColumn" text="CURP" prefWidth="150" />
                <TableColumn fx:id="edadColumn" text="Edad" prefWidth="80" />
                <TableColumn fx:id="celularColumn" text="Celular" prefWidth="120" />
                <TableColumn fx:id="hrsVueloColumn" text="Hrs Vuelo" prefWidth="100" />
                <TableColumn fx:id="licenciaColumn" text="Licencia" prefWidth="120" />
            </columns>
        </TableView>
    </center>
</BorderPane>
