<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.PilotoController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de pilotos" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <Label text="Nombres" />
                <TextField fx:id="nombresField" promptText="Nombres del piloto" GridPane.columnIndex="1" />

                <Label text="Apellidos" GridPane.rowIndex="1" />
                <TextField fx:id="apellidosField" promptText="Apellidos del piloto" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Documento" GridPane.rowIndex="2" />
                <TextField fx:id="documentoField" promptText="Documento" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Licencia" GridPane.rowIndex="3" />
                <TextField fx:id="licenciaField" promptText="Código de licencia" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Experiencia" GridPane.rowIndex="4" />
                <TextField fx:id="experienciaField" promptText="Experiencia resumida" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por nombre, documento o licencia" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="pilotoTable">
            <columns>
                <TableColumn fx:id="nombreColumn" text="Nombres" prefWidth="140" />
                <TableColumn fx:id="apellidosColumn" text="Apellidos" prefWidth="140" />
                <TableColumn fx:id="documentoColumn" text="Documento" prefWidth="120" />
                <TableColumn fx:id="licenciaColumn" text="Licencia" prefWidth="120" />
                <TableColumn fx:id="experienciaColumn" text="Experiencia" prefWidth="200" />
                <TableColumn fx:id="rolColumn" text="Rol" prefWidth="140" />
                <TableColumn fx:id="tripulacionesColumn" text="# Tripulaciones" prefWidth="140" />
            </columns>
        </TableView>
    </center>
</BorderPane>
