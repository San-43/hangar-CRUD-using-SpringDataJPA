<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.PilotoController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de pilotos" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="100" />
                </columnConstraints>
                <Label text="Persona" />
                <ComboBox fx:id="personaCombo" promptText="Seleccione una persona" GridPane.columnIndex="1" />

                <Label text="Tipo de Licencia" GridPane.rowIndex="1" />
                <TextField fx:id="licenciaTipoField" promptText="Ej: Piloto Comercial, Piloto Privado" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Certificaciones" GridPane.rowIndex="2" />
                <TextArea fx:id="certificacionesArea" promptText="Ej: Boeing 737, Airbus A320" GridPane.columnIndex="1" GridPane.rowIndex="2" prefRowCount="3" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por persona, licencia o certificación" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.5">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Pilotos" styleClass="subtitle" />
                <TableView fx:id="pilotoTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60" />
                        <TableColumn fx:id="personaColumn" text="Persona" prefWidth="220" />
                        <TableColumn fx:id="licenciaTipoColumn" text="Tipo Licencia" prefWidth="180" />
                        <TableColumn fx:id="certificacionesColumn" text="Certificaciones" prefWidth="240" />
                    </columns>
                </TableView>
            </VBox>
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Naves Pilotadas (Se crean automáticamente al registrar vuelos)" styleClass="subtitle" />
                <TableView fx:id="navesTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="naveIdColumn" text="ID Nave" prefWidth="70" />
                        <TableColumn fx:id="naveModeloColumn" text="Modelo" prefWidth="150" />
                        <TableColumn fx:id="naveMatriculaColumn" text="Matrícula" prefWidth="120" />
                        <TableColumn fx:id="fechaCertifColumn" text="Certificación" prefWidth="120" />
                        <TableColumn fx:id="fechaExpiracionColumn" text="Expiración" prefWidth="120" />
                        <TableColumn fx:id="horasColumn" text="Horas" prefWidth="80" />
                        <TableColumn fx:id="estadoColumn" text="Estado" prefWidth="100" />
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
