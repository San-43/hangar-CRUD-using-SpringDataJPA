<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.TallerController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="GestiÃ³n de talleres" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <Label text="Hangar" />
                <ComboBox fx:id="hangarCombo" promptText="Seleccione un hangar" GridPane.columnIndex="1" />

                <Label text="Encargado" GridPane.rowIndex="1" />
                <ComboBox fx:id="encargadoCombo" promptText="Seleccione un encargado" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por hangar o encargado" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tallerTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="80" />
                <TableColumn fx:id="hangarColumn" text="Hangar" prefWidth="300" />
                <TableColumn fx:id="encargadoColumn" text="Encargado" prefWidth="300" />
            </columns>
        </TableView>
    </center>
</BorderPane>
