<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.HangarController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de hangares" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <Label text="Código" />
                <TextField fx:id="codigoField" promptText="Código único" GridPane.columnIndex="1" />

                <Label text="Capacidad" GridPane.rowIndex="1" />
                <TextField fx:id="capacidadField" promptText="Capacidad máxima" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Ubicación" GridPane.rowIndex="2" />
                <TextField fx:id="ubicacionField" promptText="Ubicación física" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Empresa" GridPane.rowIndex="3" />
                <ComboBox fx:id="empresaCombo" promptText="Seleccione una empresa" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por código, ubicación, capacidad o empresa" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="hangarTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="80" />
                <TableColumn fx:id="codigoColumn" text="Código" prefWidth="150" />
                <TableColumn fx:id="capacidadColumn" text="Capacidad" prefWidth="120" />
                <TableColumn fx:id="ubicacionColumn" text="Ubicación" prefWidth="200" />
                <TableColumn fx:id="empresaColumn" text="Empresa" prefWidth="180" />
            </columns>
        </TableView>
    </center>
</BorderPane>
