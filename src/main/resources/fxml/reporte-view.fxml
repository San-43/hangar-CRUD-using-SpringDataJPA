<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.ReporteController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de reportes" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <Label text="Título" />
                <TextField fx:id="tituloField" promptText="Título del reporte" GridPane.columnIndex="1" />

                <Label text="Descripción" GridPane.rowIndex="1" />
                <TextArea fx:id="descripcionArea" promptText="Descripción detallada" GridPane.columnIndex="1" GridPane.rowIndex="1" prefRowCount="3" />

                <Label text="Taller" GridPane.rowIndex="2" />
                <ComboBox fx:id="tallerCombo" promptText="Seleccione un taller" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Nave" GridPane.rowIndex="3" />
                <ComboBox fx:id="naveCombo" promptText="Seleccione una nave" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por título o descripción" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="reporteTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="80" />
                <TableColumn fx:id="tituloColumn" text="Título" prefWidth="200" />
                <TableColumn fx:id="descripcionColumn" text="Descripción" prefWidth="250" />
                <TableColumn fx:id="fechaColumn" text="Fecha Registro" prefWidth="150" />
                <TableColumn fx:id="tallerColumn" text="Taller" prefWidth="150" />
                <TableColumn fx:id="naveColumn" text="Nave" prefWidth="150" />
            </columns>
        </TableView>
    </center>
</BorderPane>

