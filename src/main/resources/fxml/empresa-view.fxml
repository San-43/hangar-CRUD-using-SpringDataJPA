<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hangar.ui.controller.EmpresaController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="Gestión de empresas" styleClass="title" />
            <GridPane hgap="10" vgap="8">
                <Label text="Nombre" />
                <TextField fx:id="nombreField" promptText="Nombre de la empresa" GridPane.columnIndex="1" />

                <Label text="País" GridPane.rowIndex="1" />
                <TextField fx:id="paisField" promptText="País" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <HBox spacing="10">
                <Button text="Guardar / Actualizar" onAction="#onGuardar" />
                <Button text="Eliminar" onAction="#onEliminar" />
                <Button text="Limpiar" onAction="#onLimpiar" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Buscar por nombre o país" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="empresaTable">
            <columns>
                <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="200" />
                <TableColumn fx:id="paisColumn" text="País" prefWidth="120" />
                <TableColumn fx:id="hangaresColumn" text="# Hangares" prefWidth="120" />
                <TableColumn fx:id="navesColumn" text="# Naves" prefWidth="120" />
            </columns>
        </TableView>
    </center>
</BorderPane>
